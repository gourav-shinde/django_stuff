/app1/lectview/{{lect.id}}/delete



class Attendance_form(forms.ModelForm):
	students_present=forms.ModelMultipleChoiceField(queryset=Students.objects.none(),)
	class Meta:
		model=Attendance
		fields=("date","students_present")


def add_attendance_view(request,my_id):
	var=Lecture.objects.get(id=my_id)
	print(Students.objects.filter(section=var.section_class))

	if request.POST:								
		form=Attendance_form(request.POST or None)
		if form.is_valid():
			instance=form.save(commit=False)
			instance.lecture=Lecture.objects.get(id=my_id)
			instance.save()
			form.save.m2m()
			return redirect("../")
	else:
		form=Attendance_form()
		form.fields['students_present'].queryset = Students.objects.filter(section=var.section_class)

	context={"form":form}
	return render(request,"from.html",context)





